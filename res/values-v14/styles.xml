<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="homeAsUpIndicator">@drawable/custom_nav_drawer</item>
        <item name="android:actionBarStyle">@style/action_bar_style</item>
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="action_bar_style" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">48dp</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:background">@color/white</item>
        <item name="android:state_pressed">@color/green</item>
        <item name="android:state_focused">@color/black</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTabTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabStyle.A</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
        <item name="android:actionBarStyle">@style/ActionBarTabViewStyle</item>
    </style>

    <style name="ActionBarTabViewStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">@drawable/tab_divider</item>
        <item name="android:dividerPadding">20dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:background">@drawable/startbutton</item>
    </style>

    <style name="ActionBarTabStyle.A" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:divider">@drawable/tab_divider</item>
        <item name="android:background">@drawable/green_degradee</item>
        <item name="android:showDividers">middle</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:dividerPadding">20dp</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
    </style>

    <style name="CustomActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/green_degradee</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">20dp</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
    </style>

</resources>